#!/usr/bin/env ruby

dir = File.dirname(__FILE__)
$LOAD_PATH.unshift("#{dir}/../lib")
require "js_spec"
require "net/http"

response = Net::HTTP.start(JsSpec::Server::DEFAULT_HOST, JsSpec::Server::DEFAULT_PORT) do |http|
  http.post('/runners/firefox', {})
end

body = response.body
if body.empty?
  puts "SUCCESS"
  exit 0
else
  puts "FAILURE"
  puts body
  exit 1
end
